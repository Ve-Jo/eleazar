# Server Configuration
AI_SERVICE_PORT=8080
AI_SERVICE_HOST=0.0.0.0
NODE_ENV=development

# AI Provider API Keys
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
NANOGPT_API_KEY=your_nanogpt_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_CONNECTION_TIMEOUT=120000

# Model Configuration
MODEL_CACHE_TTL=600000
MODEL_REFRESH_INTERVAL=3600000
MAX_MODEL_CACHE_SIZE=1000

# Request Configuration
MAX_REQUEST_SIZE_MB=10
REQUEST_TIMEOUT_MS=120000
MAX_CONCURRENT_REQUESTS=50

# Monitoring and Metrics
METRICS_PORT=9090
METRICS_ENABLED=true
METRICS_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/ai-service.log

# Security
CORS_ORIGINS=*
API_KEY_REQUIRED=false
API_KEY=your_api_key_here

# Provider Specific Settings
GROQ_BASE_URL=https://api.groq.com/openai/v1
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
NANOGPT_BASE_URL=https://api.nanogpt.com/v1

# Fallback Configuration
FALLBACK_ENABLED=true
FALLBACK_RETRY_ATTEMPTS=3
FALLBACK_RETRY_DELAY=1000