{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "apt-get update && apt-get install -y libasound2 && bun install"
  },
  "deploy": {
    "startCommand": "bun start",
    "restartPolicyType": "ALWAYS",
    "numReplicas": 1,
    "sleepApplication": false
  }
}
